generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String?
  password     String?
  authProvider Provider
  streams Stream[]
  upvotes Upvotes[]
}

enum Provider {
  Credentials
  Github
  Google
}

model Stream {
  id          String    @id @default(cuid())
  userId      String
  url         String
  extractedId String
  type         StreamType
  active      Boolean   @default(true)
  user        User      @relation(fields: [userId], references: [id])
  upvotes     Upvotes[]
}
enum StreamType{
  Youtube
  Spotify
}
model Upvotes {
  id       String @id @default(cuid())
  userId   String
  streamId String
  user     User   @relation(fields: [userId], references: [id])
  stream   Stream @relation(fields: [streamId], references: [id])
  @@unique([streamId, userId])
}
